{
  "manifest_version": 3,
  "name": "ReplyFlow",
  // Update the description to avoid keyword spam and to concisely describe
  // the extension's purpose without listing specific platforms.  This
  // description appears in the Chrome Web Store and should focus on the
  // benefit to the user.
  "description": "Manage and respond to comments across multiple social platforms with AI-powered replies. Save time and stay on-brand from one dashboard.",
  "version": "0.1",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "ReplyFlow",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ]
}